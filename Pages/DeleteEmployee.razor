@page "/delete/{Id}"
<h3>DeleteEmployee</h3>

<h3>Are you sure want to delete this?</h3>
<form>
    <div class="row">
        <div class=" col-md-8">
            <div class="form-group">
                <label>Employee Id:</label>
                <label>@obj.Id</label>
            </div>
            <div class="form-group">
                <label>Employee Name:</label>
                <label>@obj.Name</label>
            </div>
            <div class="form-group">
                <label>Age:</label>
                <label>@obj.Age</label>
            </div>
            <div class="form-group">
                <label>Position:</label>
                <label>@obj.Position</label>
            </div>
            <div class="form-group">
                <label>City:</label>
                <label>@obj.City</label>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-danger" @onclick="@DeleteEmployeeById" value="Delete" />
            </div>
        </div>
    </div>
</form>
